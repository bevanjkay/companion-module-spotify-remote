{
	"name": "spotify-remote",
	"version": "2.2.0",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"build": "rimraf dist && tsc -p tsconfig.build.json",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "run lint:raw .",
		"lint-fix": "run lint --fix"
	},
	"author": "Peter Stather",
	"license": "MIT",
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"run lint:raw --fix"
		]
	},
	"engines": {
		"node": "^18.12"
	},
	"dependencies": {
		"@companion-module/base": "~1.10.0",
		"@types/node": "^18.19.50",
		"@types/spotify-api": "^0.0.25",
		"got": "^12.6.1",
		"p-queue": "^8.0.1",
		"type-fest": "^4.26.1"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.0.1",
		"eslint": "^9.10.0",
		"husky": "^9.1.5",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"rimraf": "^5.0.10",
		"typescript": "~5.5.4",
		"typescript-eslint": "^8.4.0"
	},
	"packageManager": "yarn@4.4.0"
}
